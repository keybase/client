{
  "env": {
    // Only used by react-native
    "production": {
      "presets": ["babel-preset-react-native"]
    },
    // Only used by react-native
    "development": {
      "presets": ["babel-preset-react-native"]
    },
    // Used by node for our own scripts
    "yarn": {
      "presets": ['@babel/preset-env', '@babel/preset-react'],
      "plugins": ['@babel/plugin-proposal-object-rest-spread', '@babel/transform-flow-strip-types', '@babel/plugin-proposal-class-properties']
    }
  }
}
