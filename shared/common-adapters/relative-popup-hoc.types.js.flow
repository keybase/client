// @flow
import * as React from 'react'
export type Position =
  | 'top left'
  | 'top right'
  | 'bottom right'
  | 'bottom left'
  | 'right center'
  | 'left center'
  | 'top center'
  | 'bottom center'
  | 'center center'

export type Props<PP: {}> = {|
  ...PP,
  targetRect: ?ClientRect,
  position: Position,
  style?: Object,
|}

export type RelativePopupHocType<PP> = (
  PopupComponent: React.ComponentType<PP>
) => React.ComponentType<Props<PP>>
