/* @flow */

import React, {Component} from 'react'

export type Props = {
  type: 'HeaderJumbo' | 'HeaderBig' | 'Header'
          | 'Body' | 'BodySemibold' | 'BodySmall'
          | 'Error'
          | 'Terminal'
          | 'TerminalUsername' | 'TerminalPublic' | 'TerminalPrivate'
          | 'TerminalCommand' | 'TerminalComment' | 'TerminalEmpty',
  darkMode?: boolean, // For rendering on a dark background (light text)
  inline?: boolean,
  warning?: boolean, // Warning text has a yellow background and brown text
  link?: boolean,
  small?: boolean,
  reversed?: boolean,
  onClick?: () => void,
  lineClamp?: number,
  style?: Object,
  dz2?: boolean, // Use DZ2 styling?
  children?: ReactElement,
  className?: string
}

declare export default class Text extends React.Component {
  props: Props;
}

declare export var styles: Object

declare function lineClamp (lines: number): Object
