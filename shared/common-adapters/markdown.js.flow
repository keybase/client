// @flow
import * as React from 'react'
import type {ChannelMention, ChannelNameMentions, Mentions, ConversationIDKey} from '../constants/types/chat'

type MarkdownComponentType =
  | 'inline-code'
  | 'code-block'
  | 'link'
  | 'text'
  | 'bold'
  | 'italic'
  | 'strike'
  | 'emoji'
  | 'native-emoji'
  | 'quote-block'

export type MarkdownCreateComponent = (
  type: MarkdownComponentType,
  key: string,
  children: Array<React.Node>,
  options: {href?: string}
) => ?React.Node

export type MarkdownMeta = {
  mentions: Mentions,
  channelMention: ChannelMention,
  channelNameMentions: ChannelNameMentions,
  channelNameToConvID: {[string]: ConversationIDKey},
}

export type Props = {
  children?: string,
  preview?: boolean, // if true render a simplified version
  style?: any,
  allowFontScaling?: boolean,
  meta?: MarkdownMeta,
}

export default class Markdown extends React.Component<Props> {}
