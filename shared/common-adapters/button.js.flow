// @flow
import React, {Component} from 'react'

export type Props = {
  onClick: ?(event: SyntheticEvent) => void,
  onPress?: void,
  onMouseEnter?: Function,
  onMouseLeave?: Function,
  label: ?string,
  style?: ?Object,
  labelStyle?: ?Object,
  type: 'Primary' | 'Secondary' | 'Danger' | 'Follow' | 'Following' | 'Unfollow',
  disabled?: ?boolean,
  waiting?: ?boolean,
  small?: boolean,
  fullWidth?: boolean,
  backgroundMode?: 'Normal' | 'Terminal',
  className?: string,
  accessibilityLabel?: string | true,
}

declare export default class Button extends Component<void, Props, void> {}
