// @flow
import {Component} from 'react'

import type {AttachmentMessage, TextMessage} from '../../../constants/chat'

type BaseProps = {
  onHidden: () => void,
  style?: Object,
  onDeleteMessage: (message: TextMessage | AttachmentMessage) => void,
}

export type TextProps = {
  message: TextMessage,
  you: string,
  onShowEditor: (message: TextMessage) => void,
} & BaseProps

export class TextPopupMenu extends Component<void, TextProps, void> {}

export type AttachmentProps = {
  message: AttachmentMessage,
  you: string,
  onDownloadAttachment: () => void,
  onOpenInFileUI: () => void,
  onShareAttachment?: () => void,
  onSaveAttachment?: () => void,
} & BaseProps

export class AttachmentPopupMenu
  extends Component<void, AttachmentProps, void> {}
