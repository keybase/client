{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "assumeChangesOnlyAffectDirectDependencies": false,
    "baseUrl": ".",
    "checkJs": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["ESNext", "dom"],
    "module": "commonjs",
    "paths": {
      "@electron/remote": ["override-d.ts/@electron-remote/index.d.ts"],
    },
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./.tsOuts/.tsOut/emit",
    "resolveJsonModule": true,
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    "tsBuildInfoFile": "./.tsOuts/.tsOut/cache",
    "typeRoots": ["./node_modules/@types/", "./custom-d.ts/"]
  },
  "include": ["globals.d.ts"],
  "exclude": [
    "./node_modules",
    "./react-native",
    "./desktop/dist",
    "./desktop/build"
  ]
}
