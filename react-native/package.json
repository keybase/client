{
  "name": "Keybase",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node_modules/react-native/packager/packager.sh",
    "pod-install": "cd ios; pod install",
    "reactbundle-ios": "node node_modules/react-native/local-cli/cli.js bundle --minify --root react --out ios/Keybase/main.jsbundle --url \"/react/index.bundle?platform=ios&dev=\"",
    "reactbundle-android": "node node_modules/react-native/local-cli/cli.js bundle --out \"android/app/src/main/assets/index.bundle\" --root react --platform android --url \"/index.bundle?platform=android&dev=\"",
    "gobuild-ios": "GO15VENDOREXPERIMENT=1 $GOPATH/bin/gomobile bind -target=ios -o ios/keybase.framework github.com/keybase/client/go/loopback",
    "gobuild-android": "GO15VENDOREXPERIMENT=1 $GOPATH/bin/gomobile bind -target=android -o android/keybaselib/keybaselib.aar github.com/keybase/client/go/loopback",
    "packager-wipe-cache": "node ./react/packager/wipe-cache.js",
    "build-ios": "npm run pod-install && npm run gobuild-ios && npm run reactbundle-ios"
  },
  "dependencies": {
    "buffer": "^3.5.1",
    "iced-runtime": "^1.0.3",
    "immutable": "^3.7.5",
    "moment": "^2.10.6",
    "qrcode-generator": "^1.0.0",
    "react-native": "^0.12.0",
    "react-native-camera": "^0.3.7",
    "react-redux": "^3.1.0",
    "redux": "^3.0.2",
    "redux-thunk": "^1.0.0",
    "util": "^0.10.3"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "purepack/",
      "iced-error/",
      "framed-msgpack-rpc/",
      "keybase_v1.js"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "redux-devtools": "^2.1.5",
    "redux-logger": "^2.0.3"
  }
}
