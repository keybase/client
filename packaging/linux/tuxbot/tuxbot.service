[Unit]
Description=tuxbot

[Service]
WorkingDirectory=%h/go/src/github.com/keybase/client/packaging/linux/tuxbot/bot/
ExecStart=go run %h/go/src/github.com/keybase/client/packaging/linux/tuxbot/bot/tuxbot/
EnvironmentFile=/keybase/team/keybase.builds.linux/.kbfs_autogit/build-linux/keybot.env
Environment=GNUPGHOME=/tmp
Restart=on-failure

[Install]
WantedBy=default.target
